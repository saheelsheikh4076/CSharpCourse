
@model IEnumerable<StudentViewModel>
@{
    int i = 1;
}

<a asp-controller="Student" asp-action="AddStudent" class="btn btn-outline-primary">Add Student</a>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(s=>s.Id)</th>
            <th>@Html.DisplayNameFor(s=>s.Name)</th>
            <th>@Html.DisplayNameFor(s=>s.Age)</th>
            <th>@Html.DisplayNameFor(s=>s.Gender)</th>
          <th>Action</th>
        </tr>
    </thead>
    @foreach (var item in Model)
    {
        <tr>
            <td>@(i++)</td>
            <td>@item.Name</td>
            <td>@item.Age</td>
            <td>@item.Gender</td>
            <td>
                <form method="post" asp-controller="Student" asp-action="DeleteStudent" asp-route-StudentId="@item.ProtectedId">
                    <button type="submit" class="btn btn-danger">Delete</button>
                    <a asp-controller="Student" asp-action="UpdateStudent" asp-route-StudentId="@item.ProtectedId" class="btn btn-warning">Update</a>
                </form>
            </td>
        </tr>
    }
</table>
