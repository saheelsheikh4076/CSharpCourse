@model IEnumerable<ProductListViewModel>

@{
    ViewData["Title"] = "Product Manager";
    int i = 1;
}


<h1>Product Manager</h1>

<p>
    <a asp-controller="ProductManager" asp-action="Add" class="btn btn-default">Add New Product</a>
</p>
<h2>List of Products</h2>
<table class="table">
    <thead>
        <tr>
            <th>
                Sr.No.
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @(i++)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                <form method="post" asp-controller="ProductManager" asp-action="Delete" asp-route-ProtectedId="@item.ProtectedId">
                    <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure?');">Delete</button>
                        <a asp-controller="ProductManager" asp-action="Update" asp-route-ProtectedId="@item.ProtectedId" class="btn btn-info">Update</a>
                </form>
            </td>
        </tr>
}
    </tbody>
</table>
